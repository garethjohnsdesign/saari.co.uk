{% set bodyClass = 'info' %}
{% set title = "Info" %}

{% extends "_layouts/site" %}

{% block navigation %}
{% include "_includes/global/navigation" %}
{% endblock %}


{% block main %}

<div class="grid-container">

  <div class="grid-x grid-padding-y">
    <div class="small-12 cell">
      {% set image = entry.image.one() %}
      <div class="light-gray-background-color">
      <div class="image--24-1" {% if image %}data-interchange="{% include "_includes/images/contained/16-9/interchange-img-small-12-medium-12" %}" data-aos="fade-in" data-aos-delay="100"{% endif %}></div>
      </div>  
    </div>
  </div>

  {% for detail in entry.details.all()  %}
  <div class="grid-x grid-padding-x grid-padding-y align-center">
    <div class="small-12 medium-3 cell">
      <div class="h3">{{detail.header}}</div>
    </div>
    <div class="small-12 medium-9 cell">
        {{detail.copy}}
    </div>
  </div>
  {% endfor %}

</div>

{% endblock %}


{% block footer %}
{% include "_includes/global/footer" %}
{% endblock %}