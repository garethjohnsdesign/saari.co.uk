{% set bodyClass = 'services' %}

{% extends "_layouts/site" %}

{% block navigation %}
{% include "_includes/global/navigation" %}
{% endblock %}


{% block main %}

<div class="wrapper">
  <div class="grid-container">
  
    <div class="grid-x grid-padding-x grid-padding-y">
      <div class="small-12 medium-10 large-8 cell padding-bottom-1">
        {{entry.description}}
      </div>
    </div>
  
    <div class="grid-x grid-padding-x grid-padding-y align-left medium-up-2">
      {% for detail in entry.details.all() %}
      <div class="cell">
        <div class="h3">{{detail.header}}</div>
        {{detail.copy}}
      </div>
      {% endfor %}
    </div>
  
    <div class="grid-x grid-padding-x padding-top-1">
      <div class="small-12 medium-10 large-8 cell">
        {{entry.copy}}
      </div>
    </div>
  
  </div>
</div>

{% endblock %}


{% block footer %}
{% include "_includes/global/footer" %}
{% endblock %}