{# Footer #}
<footer class="grid-x grid-padding-x grid-padding-y align-justify sans-display">

  <div class="shrink cell">
    <ul class="menu align-left align-middle">
        <li><a href="mailto:{{company.email}}">{{company.email}}</a></li>
        <li><a href="tel:{{company.phoneNumber}}">{{company.phoneNumber}}</a></li>
      </ul>
  </div>

  <div class="shrink cell">
    <ul class="menu align-left align-middle">
      <li><a href="/privacy-policy" class="medium-gray show-for-medium">Privacy Policy</a></li>
      <li><a href="/terms" class="medium-gray show-for-medium">Terms and Conditions</a></li>
      {% for block in socials.socials.all() %}
      {% switch block.type %}
        {% case "facebook" %}
          <li><a href="{{block.socialLink}}" target="_blank" rel="noreferrer" aria-label="Facebook"><svg class="icon icon-facebook"><use xlink:href="/assets/icons/symbol-defs.svg#icon-facebook"></use></svg></a></li>
        {% case "instagram" %}
          <li><a href="{{block.socialLink}}" target="_blank" rel="noreferrer" aria-label="Instagram"><svg class="icon icon-instagram"><use xlink:href="/assets/icons/symbol-defs.svg#icon-instagram"></use></svg></a></li>
        {% case "twitter" %}
            <li><a href="{{block.socialLink}}" target="_blank" rel="noreferrer" aria-label="Twitter"><svg class="icon icon-twitter"><use xlink:href="/assets/icons/symbol-defs.svg#icon-twitter"></use></svg></a></li>
        {% case "linkedin" %}
            <li><a href="{{block.socialLink}}" target="_blank" rel="noreferrer" aria-label="LinkedIn"><svg class="icon icon-linkedin"><use xlink:href="/assets/icons/symbol-defs.svg#icon-linkedin"></use></svg></a></li>
      {% endswitch %}
      {% endfor %}
    </ul>
  </div>

</footer>
{# End Footer #}
