{% set bodyClass = 'home' %}

{% extends "default/_layouts/site" %}

{% block navigation %}
{% include "_includes/global/navigation" %}
{% endblock %}

{% block main %}

{# Carousel #}
<div class="grid-x">
  <div class="small-12 medium-12 cell">
    <div class="swiper-container">

   
      <div class="swiper-wrapper">
      {% set carouselQuery = entry.carousel.orderBy('RAND()').all() %}
      {% for project in carouselQuery %}
        <div class="swiper-slide small-12 cell">
            {% if project.heroImage.one()|length %}
            {% set image = project.heroImage.one() %}
            {% else %}
            {% set image = project.image.one() %}
            {% endif %}
            <div class="image--hero" data-interchange="{% include "_includes/images/full/full/interchange-img-small-12-medium-12" %}">

              <div class="content" style="height: 100%; width: 100%">

                <div class="grid-x align-bottom" style="height: 100%; width: 100%;">
                  <div class="small-12 medium-6 cell" style="z-index: 2">
                    <div class="padding-2">
                      <h2 class="white">{{project.title}}</h2>
                      <div class="white">{{project.description |striptags|raw }}</div>
                      <div class="margin-top-1 show-for-small-only"><a href="{{ project.url }}" class="white">View Project</a></div>
                    </div>
                  </div>
                  <div class="small-12 medium-6 cell show-for-medium" style="z-index: 2">
                    <div class="padding-2 text-right">
                      <a href="{{ project.url }}" class="white">View Project</a>
                    </div>
                  </div>

                  <div class="swiper-button-prev-test flex-container align-center-middle"></div>
                  <div class="swiper-button-next-test flex-container align-center-middle"></div>
  
                </div>


              </div>

            </div>
                  
        </div>
      {% endfor %}
      </div>

    </div>
  </div>
</div>
{# End Carousel #}

<div class="wrapper">
  <div class="grid-container">
  
    {# Description #}
    <div class="grid-x grid-padding-x grid-padding-y">
      <div class="small-12 medium-10 large-9 cell text-left">
        <div>{{entry.description}}</div>
        <a href="/profile" class="secondary-color">Learn more about us</a>
      </div>
    </div>
    {# End Description #}
  
    {# Projects #}
    {% set projectsQuery = entry.projects.all() %}
  
    {% set projectCount = projectsQuery|length %}
      <div class="grid-x grid-padding-x align-left">
        {% for project in projectsQuery %}
          <div class="small-12 medium-6 cell padding-top-1">
            <a href="{{ project.url }}">
            {% include "_includes/blocks/excerpt" %}
            </a>
          </div>
        {% endfor %}
      </div>
    {# End Projects #}
    
    {# Services #}
    <div class="grid-x grid-padding-x grid-padding-y">
      <div class="small-12 medium-8 cell text-left">
        <h2>Services</h2>
        {{entry.servicesCopy}}
        <a href="/services" class="secondary-color">Learn about the services we offer</a>
      </div>
    </div>
    {# End Services #}
    
    {# Contact #}
    <div class="grid-x grid-padding-x grid-padding-y">
      <div class="small-12 medium-8 cell text-left">
        <h2>Contact</h2>
  
  
        <div class="grid-x grid-padding-x medium-up-3">
          {% for contact in entry.contacts.all() %}
          <div class="cell margin-bottom-1">
          <h4 class="margin-bottom-0">{{contact.header}}</h4>
          <a href="mailto:{{contact.email}}" class="link">{{contact.email}}</a>  
          </div>
          {% endfor %}
        </div>
  
  
        <a href="/contact" class="secondary-color">Get in touch with us</a>
      </div>
    </div>
    {# End Contact #}
  
  </div>
</div>

{% endblock %}

{% block footer %}
{% include "_includes/global/footer" %}
{% endblock %}

